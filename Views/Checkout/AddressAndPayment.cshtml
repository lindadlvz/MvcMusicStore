@model MvcMusicStore.Models.Order

@{
    ViewBag.Title = "Direccion y pago";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    
    <h2>Dirección y pago</h2>
    <fieldset>
        <legend>Información de envío</legend>

        @Html.EditorForModel()
    </fieldset>
    <fieldset>
        <legend>Pago</legend>
        <p>Estamos realizando una promoción: toda la música es gratis con el código promocional: "MIMUSICA"</p>

        <div class="editor-label">
            @Html.Label("Codigo de promocion")
        </div>
        <div class="editor-field">
            @Html.TextBox("PromoCode")
        </div>
    </fieldset>
    
    <input class= "button btn btn-primary" type="submit" value="Orden de envio" />
}