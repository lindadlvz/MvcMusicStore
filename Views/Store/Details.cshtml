@model MvcMusicStore.Models.Album

@{
    ViewBag.Title = "Album - " + Model.Title;
}

<h2>@Model.Title</h2>
<p>
    <img alt="@Model.Title" src="@Model.AlbumArtUrl" />
</p>

<div  id="album-details" class="jumbotron jumbotron-fluid">
    <p>
        <em>Genero:</em>
        @Model.Genre.Name
    </p>
    <p>
        <em>Artista:</em>
        @Model.Artist.Name
    </p>
    <p>
        <em>Precio:</em>
        @String.Format("{0:F}", Model.Price)
    </p>
    <p class="button btn btn-primary">
        @Html.ActionLink("Agregar a la carreta", "AddToCart",
        "ShoppingCart", new { id = Model.AlbumId }, "")
    </p>
</div> 